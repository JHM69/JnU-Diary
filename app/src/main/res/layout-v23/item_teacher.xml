<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/next"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:targetApi="m">


    <TextView
        android:id="@+id/namet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/hind_siliguri_bold"
        android:text="Jahangir Hossain"
        android:textColor="@color/dim"
        android:textIsSelectable="true"
        android:textSize="20sp"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toTopOf="@+id/ast"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/ast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/hind_siliguri_medium_regular"
        android:text="Chairman"
        android:textColor="@color/dim"
        android:textSize="16sp"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toTopOf="@+id/mailt"
        card_view:layout_constraintStart_toStartOf="@+id/namet"
        card_view:layout_constraintTop_toBottomOf="@+id/namet" />


    <TextView
        android:id="@+id/mailt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/hind_siliguri_medium_regular"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="CSE"
        android:textColor="@color/dim"
        android:textSize="13sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="@+id/ast"
        card_view:layout_constraintTop_toBottomOf="@+id/ast" />


    <androidx.cardview.widget.CardView
        android:id="@+id/call"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="7dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/mail"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            card_view:srcCompat="@drawable/ic_phone_24px" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mail"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="7dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            card_view:srcCompat="@drawable/ic_alternate_email_24px" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
